# --- App secrets ---
SECRET_KEY=change-this-to-a-long-random-string
SESSION_COOKIE_NAME=gocount_session

# --- Database ---
# Local dev (SQLite) default is app.db; to use Postgres set DATABASE_URL like below:
# DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=sqlite:///app.db

# --- SMTP for OTP emails ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=Gocount <no-reply@gocount.ai>

# --- Ingest API (used by your pipeline) ---
INGEST_API_KEY=change-this-ingest-key
